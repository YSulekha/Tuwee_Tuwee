<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="tweet" type="com.codepath.apps.tweet.models.Tweet"/>
        <variable
            name="user"
            type="com.codepath.apps.tweet.models.User"/>
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/item_profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        app:imageUrl="@{tweet.user.imageUrl}"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_profile"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/item_name"
        android:text="@{tweet.user.userName}"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_name"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/item_screenname"
        android:text="@{tweet.user.screenName}"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/item_time"
        app:timeCalc="@{tweet.createdAt}"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_profile"
        android:layout_below="@id/item_name"
        android:id="@+id/item_body"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="@{tweet.body}"
        android:autoLink="all"
        android:linksClickable="true"/>

</RelativeLayout>
    </layout>